@{

}
    @model buoi2_TH.Models.Product
<h2>Product Details</h2>

<div>
    <h4>Name: @Model.Name</h4>
    <h4>Price: @Model.Price</h4>
    <h4>Description: @Model.Description</h4>
    <h2>@Model.Name</h2>

    <img src="https://localhost:7082//@Model.ImageUrl" width="600px" alt="Product Image" />

    @if(Model.ImageUrls == null)
    {
        <p>No image available</p>
    }
    else
    {
    

    @foreach (var imageUrl in Model.ImageUrls)
    {
        <img src="https://localhost:7082//@imageUrl" width="100px" alt="Product Image" />
    }
    }

</div>

