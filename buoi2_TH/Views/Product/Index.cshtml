@{
}
    @model IEnumerable<buoi2_TH.Models.Product>

<h2>Products</h2>
<a asp-action="Add" >Create New</a>


<table class="table">
    <thead>
        <tr>
       
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Categorys</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    <img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                </td>
                @foreach (var category in ViewBag.list_categorys)
                {
                    if (product.Category.Name == category.Name)
                    {
                        <td>@category.Name</td>
                    }
                    
                }
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id">
                        <button type="button" class="btn btn-success">view</button>
                    </a> |
                    <a asp-action="Update" asp-route-id="@product.Id">
                        <button type="button" class="btn btn-info">Edit</button>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a> |
                  
                </td>
            </tr>
        }
    </tbody>
</table>

